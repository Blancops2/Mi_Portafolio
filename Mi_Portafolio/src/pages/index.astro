---
import { getCollection } from "astro:content";
import ProjectCard from "../components/ProjectCard.astro";
import TechCard from "../components/TechCard.astro";
import Layout from "../layouts/Layout.astro";

interface TechItem {
    title: string;
    tech: string[];
}

interface ProjectItem {
    slug: string;
    data: {
        title: string;
        shortDescription: string;
    };
}

const projects: ProjectItem[] = await getCollection("projects");

const techItems: TechItem[] = [
    {
        title: "IA",
        tech: ["Dataflows", "ML Supervisado", "ML No Supervisado", "IA Generative"]
    },
    {
        title: "Desarrollo Web",
        tech: ["HTML", "CSS", "JavaScript", "React", "Node.js", "Express", "Django"]
    },
    {
        title: "Bases de Datos",
        tech: ["SQL", "MongoDB", "Firebase", "SQLite"]
    },
    {
        title: "DevOps",
        tech: ["Docker", "Kubernetes", "GitHub Actions", "GitLab CI"]
    },
    {
        title: "Herramientas",
        tech: ["Git", "GitHub", "GitLab", "VS Code", "Postman", "Insomnia"]
    }
]

---

<Layout title="Yeison Blanco">
    <div class="flex bg-white justify-center items-center space-x-8" style="padding: 30px; border-radius: 30px; box-shadow: 0px 1px 20px rgba(158, 138, 138, 0.9); width: max-content; margin: 0 auto; margin-top: 35px;">
        
        <!-- Contenedor del texto -->
        <div class="flex-1" style="max-width: 400px;">
            <h1 class="text-4xl font-bold text-gray-800 mb-4">Acerca de Mi</h1>
            <p class="text-gray-600 mb-4">
                Soy un desarrollador web apasionado por crear soluciones innovadoras y eficientes.
                Me encanta aprender nuevas tecnologías y enfrentar desafíos que me permitan crecer profesionalmente.
            </p>
        </div>
        
        <!-- Contenedor de la imagen -->
        <div class="flex-1">
            <img src="/assets/imagen.jpg" alt="Descripción de la imagen" width="250px" height="180" style="border-radius: 10%; box-shadow: 0px 1px 20px rgba(0, 0, 0, 0.25);" />
        </div>
        
    </div>

    <section id="technologies" class="mb-16">
        <div class="bg-White" style=" padding: 50px; border-radius: 30px; margin-top: 35px; width: calc(100% + 300px); margin-left: -30px;">
        <h2 class="text-3xl font-bold text-gray-800 mb-4">Mis Tecnologías</h2>
        <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
            { techItems.map( ( item ) => (
                <TechCard title={item.title} tech={ item.tech } />
            ) ) }
        </div>
    </div>
    </section>

    <section id="projects">
        <div class="bg-White" style=" padding: 50px; border-radius: 30px; margin-top: 35px; width: calc(100% + 170px); margin-left: -120px;">
        <h2 class="text-3xl font-bold text-gray-800 mb-4">Proyectos Trabajados</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            { projects.map( ( p ) => (
                <ProjectCard
                    title={ p.data.title }
                    description={ p.data.shortDescription }
                    link={ `/projects/${ p.slug }` }
                />
            ) ) }
        </div>
    </div>
    </section>
</Layout>

<footer></footer>

