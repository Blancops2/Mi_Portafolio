---

export interface Props {
    title: string;
    tech: string[];
}

const { title, tech } = Astro.props;

---

<div class="bg-white p-4 rounded shadow-2xl transition-transform duration-300 transform group-hover:-translate-y-4 hover:scale-105"> 
    <h3 class="font-semibold text-lg mb-2 text-black">{title}</h3>
    <ul class="list-disc list-inside text-black">
        { tech.map( ( t ) => (
            <li>{ t }</li>
        ) ) }
    </ul>
</div>